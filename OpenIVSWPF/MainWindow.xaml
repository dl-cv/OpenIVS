<Window x:Class="OpenIVSWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenIVSWPF"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:dlcv="clr-namespace:DLCV;assembly=ImageViewer"
        mc:Ignorable="d"
        Title="OpenIVS" Height="720" Width="1280"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部状态栏 -->
        <Grid Grid.Row="0" Background="#F0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="OpenIVS - 视觉检测系统" FontSize="16" FontWeight="Bold" Margin="10" VerticalAlignment="Center"/>
            <Button Grid.Column="1" x:Name="btnSettings" Content="设置" Width="80" Margin="10" Padding="10,5" Click="btnSettings_Click"/>
        </Grid>

        <!-- 主要内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧图像显示区域 -->
            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 使用WindowsFormsHost来托管ImageViewer控件 -->
                <WindowsFormsHost Grid.Row="0" Margin="0">
                    <dlcv:ImageViewer x:Name="imageViewer1" BorderStyle="FixedSingle"/>
                </WindowsFormsHost>
            </Grid>

            <!-- 右侧控制面板 -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 当前结果显示 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border x:Name="borderCurrentResult" Background="Gray" CornerRadius="4" Padding="5">
                        <TextBlock x:Name="lblCurrentResult" Text="等待结果" Foreground="White" 
                                   FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- 统计信息 -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Name="lblTotalCount" Text="总数: 0" FontSize="20" FontWeight="Bold" Margin="0,2"/>
                    <TextBlock Grid.Row="1" x:Name="lblOKCount" Text="OK: 0" FontSize="20" FontWeight="Bold" Margin="0,2"/>
                    <TextBlock Grid.Row="2" x:Name="lblNGCount" Text="NG: 0" FontSize="20" FontWeight="Bold" Margin="0,2"/>
                    <TextBlock Grid.Row="3" x:Name="lblYieldRate" Text="良率: 0.0%" FontSize="16" Margin="0,2"/>
                </Grid>

                <!-- 检测结果显示 -->
                <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                    <TextBox x:Name="txtResult" IsReadOnly="True" TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto" Margin="5"/>
                </Border>
                
                <!-- 控制按钮 -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                    <Button x:Name="btnStart" Content="开始" Width="120" Height="40" Margin="0,0,10,0" 
                            Click="btnStart_Click" FontSize="14" Background="#4CAF50" Foreground="White"/>
                    <Button x:Name="btnStop" Content="停止" Width="120" Height="40" 
                            IsEnabled="False" Click="btnStop_Click" FontSize="14" Background="#F44336" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 底部状态栏 -->
        <Grid Grid.Row="2" Background="#F0F0F0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 设备、相机、模型状态 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                <Border x:Name="borderDeviceStatus" Background="Gray" CornerRadius="4" Padding="5" Margin="0,0,10,0">
                    <TextBlock x:Name="lblDeviceStatus" Text="设备状态：未连接" Foreground="White"/>
                </Border>
                <Border x:Name="borderCameraStatus" Background="Gray" CornerRadius="4" Padding="5" Margin="0,0,10,0">
                    <TextBlock x:Name="lblCameraStatus" Text="相机状态：未连接" Foreground="White"/>
                </Border>
                <Border x:Name="borderModelStatus" Background="Gray" CornerRadius="4" Padding="5">
                    <TextBlock x:Name="lblModelStatus" Text="模型状态：未加载" Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- 当前位置 -->
            <TextBlock Grid.Column="1" x:Name="lblCurrentPosition" Text="当前位置：0.0" Margin="10,0" VerticalAlignment="Center"/>
            
            <!-- 状态信息 -->
            <TextBlock Grid.Column="2" x:Name="lblStatus" Text="就绪" Margin="5" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
