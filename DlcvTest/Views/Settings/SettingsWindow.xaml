<Window x:Class="DlcvTest.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="800" Width="1200"
        Background="#F7F8FA" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="520"/>
            <ColumnDefinition Width="520"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧侧边栏 -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="设置(Setting)" FontSize="18" FontWeight="Bold" Margin="20,0,0,20" Foreground="#333"/>
                
                <RadioButton x:Name="btnStandard" Content="标准" GroupName="Sidebar" IsChecked="True" Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click"/>
                <RadioButton x:Name="btnVisualParams" Content="可视化参数" GroupName="Sidebar" Style="{StaticResource SidebarButtonStyle}" Click="SidebarButton_Click"/>
                <RadioButton Content="批量预测" GroupName="Sidebar" Style="{StaticResource SidebarButtonStyle}" IsEnabled="False" Opacity="0.5"/>
                <RadioButton Content="流程配置" GroupName="Sidebar" Style="{StaticResource SidebarButtonStyle}" IsEnabled="False" Opacity="0.5"/>
                <RadioButton Content="模块化任务" GroupName="Sidebar" Style="{StaticResource SidebarButtonStyle}" IsEnabled="False" Opacity="0.5"/>
                <RadioButton Content="相机" GroupName="Sidebar" Style="{StaticResource SidebarButtonStyle}" IsEnabled="False" Opacity="0.5"/>
            </StackPanel>
        </Border>

        <!-- 中间和右侧内容区 - VisualParametersSettingsView 将占据两列 -->
        <ContentControl x:Name="MainContent" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0"/>

        <!-- 右下角：开始预测按钮 -->
        <Border x:Name="btnStartBatchPredictPanel" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="White" Padding="0,12,24,24">
            <Grid>
                <Button x:Name="btnStartBatchPredict" Content="开始预测" Height="40" HorizontalAlignment="Right"
                        Style="{StaticResource PurpleButtonStyle}" Click="btnStartBatchPredict_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>

