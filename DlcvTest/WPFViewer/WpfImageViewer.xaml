<UserControl x:Class="DlcvTest.WPFViewer.WpfImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DlcvTest.WPFViewer"
             mc:Ignorable="d"
             Focusable="True"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="Root" ClipToBounds="True" Background="Transparent">
        <!-- TransformLayer：用户缩�?平移（与原来 imgPreview �?RenderTransform 同逻辑�?-->
        <Grid x:Name="TransformLayer" RenderTransformOrigin="0,0">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="ScaleTf" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="TransTf" X="0" Y="0"/>
                </TransformGroup>
            </Grid.RenderTransform>

            <!-- FitBox：负�?Stretch=Uniform 自动铺满（等价于原来 Image �?Stretch=Uniform�?-->
            <Viewbox x:Name="FitBox" Stretch="Uniform" StretchDirection="Both">
                <!-- 内容尺寸 = 图像像素尺寸；Viewbox 会把它等比缩放到可视区域 -->
                <Grid x:Name="ContentLayer" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image x:Name="Img"
                           Stretch="Fill"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           SnapsToDevicePixels="True"
                           IsHitTestVisible="False"/>

                    <local:OverlayRenderer x:Name="Overlay"
                                           IsHitTestVisible="False"
                                           RenderOptions.EdgeMode="Aliased"
                                           SnapsToDevicePixels="True"/>
                </Grid>
            </Viewbox>
        </Grid>

        <!-- HUD：不随缩放平移（固定屏幕位置�?-->
        <Border x:Name="HudBorder"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Background="#00000000"
                CornerRadius="4"
                Padding="4"
                Visibility="Collapsed">
            <TextBlock x:Name="HudText"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="LimeGreen"
                       Text=""/>
        </Border>
    </Grid>
</UserControl>


