<UserControl x:Class="DlcvTest.Controls.AnimatedToggleSwitchWithText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="60">
    <Grid Width="60" Height="32" Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Cursor="Hand">
        <!-- 背景轨道 -->
        <Border x:Name="Track" CornerRadius="16">
            <Border.Background>
                <SolidColorBrush x:Name="TrackBrush" Color="#E9E9EA"/>
            </Border.Background>
        </Border>
        
        <!-- 滑块（使用 Canvas 以便精确控制位置） -->
        <Canvas>
            <Border x:Name="Thumb" Canvas.Left="2" Canvas.Top="2" 
                    Width="28" Height="28" CornerRadius="14" Background="White">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="4" Opacity="0.25" Color="Black"/>
                </Border.Effect>
            </Border>
        </Canvas>
    </Grid>
</UserControl>

